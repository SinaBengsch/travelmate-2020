<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
  <h2>My activities</h2>
  <hr>
  <br>
    <% current_user.activities.each do |activity|%>
    <div class="card-dashboard-activity">
      <div class="d-flex align-items-center">
        <div class="card-dashboard-img">
          <% if activity.photo.attached? %>
            <%= cl_image_tag activity.photo.key, height: 200, width: 150, crop: :fill %>
          <% else %>
            <%= image_tag 'travel_1.jpg', height: 300, width: 250, crop: :fill%>
          <% end %>
        </div>
        <div class="card-dashboard-description">
          <div>
            <% activity.categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </div>
          <div>
            <h4><%= activity.name %></h4>
            <p><%= activity.description %></p>
          </div>
        </div>
      </div>
    </div>
    <br>
    <% end %>
    <!--   <br>
      <h1>Bookmarked activities</h1>
      <hr> -->
    </div>
  </div>
</div>
