<div class="activity-form-container">
  <%= simple_form_for(@activity) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder:"Name of activity planned", input_html: {class: "form-control"} %>
    <br>
    <%= f.input :description, as: :text, label: false, placeholder:"Please describe your activity..", input_html: {class: "form-control"} %>
    <br>
    <%= f.input :address, label: false, placeholder: "Location of planned activity", input_html: {class: "form-control address-input"} %>
    <br>
    <div class="d-flex justify-space-around">
      <%= f.input :start_date, as: :string, label: false, placeholder: "start date", input_html: {id: "range_start", class: "form-control"}%>
      <%= f.input :end_date, as: :string, label: false, placeholder: "end date",input_html: {id: "range_end", class: "form-control"}%>
    </div>
    <%= f.input :photo, as: :file %>
    <br>
   <!--  <div class="form-group"> -->
    <div class="form-bottom">
      <p>Category</p>
      <select class="select2" multiple="multiple" placeholder= "Select a state" name="activity[category_ids][]" style="width: 100%">
        <% Category.all.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
        <% end %>
      </select>
  <br>

  <div class="form-actions mt-5">
    <%= f.button :submit, { class: "btn btn-primary" } %>
  </div>
  <% end %>
    </div>
</div>
  </div>

