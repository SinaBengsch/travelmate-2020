<div class="activity-form-container">
  <%= simple_form_for(@activity) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder:"Name of activity planned", input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :description, label: false, placeholder:"Please describe your activity", input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :address, label: false, placeholder: "Location of planned activity", input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :start_date, label: false, input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :end_date, label: false, input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :photo, as: :file %>
    <br>
    <div class="form-group">
      <label class="control-label check_boxes optional">Categories</label>
      <div class="category-choices">
        <% Category.all.each do |category| %>
        <input type="checkbox" class="hidden" value="<%= category.id %>" name="activity[category_ids][]" id="activity_category_ids_<%= category.id %>">
        <label for="acitivity_category_ids_<%= category.id %>">
          <%= category.name %>
          <i class="fa fa-check"></i>
        </label>
        <% end %>
      </div>
    </div>

  </div>
  <div class="form-actions">
    <%= f.button :submit, { class: "btn btn-primary" } %>
  </div>
  <% end %>

</div>
