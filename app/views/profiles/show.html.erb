<div class="bg-image-p" style="background-image: url(https://images.unsplash.com/photo-1582143009609-6eb83b98993b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <br><br><br><br>
  <div class="container profile-container">
    <div class="row justify-content-center p-5">
      <div class="flex-grow-1">
          <div>
          <%= image_tag @profile.photo, height: "60px", width: "60px", class: "card-trip-user avatar-bordered"%>
            <%= link_to '#' do %>
            <% if current_user != @profile %>
            <% end %>
            <% end %>
            <div class="inline">
              <h2><%= @profile.username %></h2>
            </div>
          </div>

        <hr>
        <div class="container">
          <div class="row justify-content-center">
            <div class="flex-grow-1">
              <p> <%= @profile.description %></p>
              <br>
              <div>
                <h6><strong>Languages: </strong><%= @profile.language %></h6>
              </div>

            </div>
          </div>
        </div>
        <hr>

        <div class="card-bottom d-flex justify-content-between">
          <div>
            <%= link_to activities_path do %>
            <div class="btn btn-primary">Activities</div>
            <% end %>
          </div>
          <div class="text-right">
            <% if current_user == @profile %>
            <%= link_to edit_user_registration_path do %>
            <div class="btn btn-primary">Edit</div>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
