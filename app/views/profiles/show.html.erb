
<div class="container profile-container mt-5">
  <div class="row justify-content-center p-5">
    <div class="">
      <div class="d-flex align-items-end mt-10">
        <!-- replace avatar -->
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/PhilippIversen", class: "avatar-bordered"%>
        <div>
          <div class="row">
            <%= link_to '#' do %>
              <% if current_user != @profile %>
              <div class="other-btn"><i class="far fa-comment-dots"></i> contact</div>
              <% end %>
          <% end %>
          </div>
          <div class="row">
            <h2><%= @profile.username %></h2>
          </div>
        </div>
      </div>

    <hr>
    <div class="container">
      <div class="row justify-content-center">
        <div class="">
          <p> <%= @profile.description %></p>
          <br>
          <div>
          <h6><strong>Languages: </strong><%= @profile.language %></h6>
          </div>

        </div>
</div>
    </div>
    <hr>

<div class="d-flex justify-content-between">
      <div>
        <%= link_to activities_path do %>
        <div class="btn btn-primary"><i class="fa fa-arrow-left"></i> Activities</div>
        <% end %>
      </div>
        <div class="text-right">
          <% if current_user == @profile %>
            <%= link_to edit_user_registration_path do %>
            <div class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</div>
            <% end %>
          <% end %>
        </div>
</div>
    </div>
  </div>
</div>
