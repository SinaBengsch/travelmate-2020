<div class="container">

  <div class="row justify-content-center">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="chat-header"><h4><i class="fas fa-american-sign-language-interpreting"></i><%= @chatroom.activity.name %> </h4></div>

      <div class="messages" id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render 'messages/message', message: message %>
        <% end %>
      </div>

    <div id="create-message">
      <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.activity.name}" %>
      <% end %>
    </div>

      <div style="margin-bottom: 30px;">
      <%= link_to "go back to activity", root_path, { class: "btn btn-primary" }  %>
      </div>
    </div>
  </div>
</div>
